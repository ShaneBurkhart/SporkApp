- content_for :title, "Forgot Your Password?"

.content.container
  %h2 Forgot your password?
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f|
    = f.error_notification
    = f.input :email, :required => true, :autofocus => true, input_html: {class: "span5"}
    = f.button :submit, "Send me reset password instructions"
  = render "devise/shared/links"
