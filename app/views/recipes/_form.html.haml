= simple_form_for(@recipe) do |f|
  = f.error_notification

  .row-fluid
    .span8
      = f.input :name, input_html: { class: "input-block-level" }
  .row-fluid
    .span8
      = f.input :description, input_html: { rows: 10, class: "input-block-level" }

  .row-fluid
    .span3
      = f.input :month, collection: months
    .span3
      = f.input :year, collection: years

  .row-fluid
    .span3
      = f.input :deadline, collection: days


  .row-fluid
    .span3
      = f.input :image

  .form-actions
    = f.button :submit
